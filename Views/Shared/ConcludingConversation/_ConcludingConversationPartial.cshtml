@using RazorToPDF.ViewModels

@model RazorToPDF.Views.Shared.ConcludingConversation._ConcludingConversationModel
@{
}

<div class="print-row py-2 mt-4">
    <div class="col">
        <label for="StudentName" class="form-label">Student</label>
        <input type="text"
               class="form-control"
               id="StudentName"
               value="@(!string.IsNullOrEmpty(Model.concludingConversationData.Student) ? Model.concludingConversationData.Student : string.Empty)" />
    </div>
    <div class="col">
        <label for="studentDateDateAdministered" class="form-label">Date Date Administered</label>
        <input type="text"
               class="form-control"
               id="studentDateDateAdministered"
               value="@(!string.IsNullOrEmpty(Model.concludingConversationData.DateAdministrated.ToString()) ? Model.concludingConversationData.DateAdministrated : string.Empty)" />
    </div>
    <div class="col">
        <label for="studentAdministeredBy" class="form-label">Administered by</label>
        <input type="text"
               class="form-control"
               id="studentAdministeredBy"
               value="@(!string.IsNullOrEmpty(Model.concludingConversationData.AdministratedBy) ? Model.concludingConversationData.AdministratedBy : string.Empty)" />
    </div>
</div>

<div class="print-row py-2  mt-4 blue_box border border-2">
    <div class="ms-3 col-11">

        <div class="py-2">
            <label class="form-label">
                1. Now that we’re finished with the testing, what do you think about coming here to help you do better in school?
            </label>
            <div class="col checkbox-label">
                @foreach (ThinkAboutComming thinkAboutComming in Enum.GetValues(typeof(ThinkAboutComming)))
                {
                    var isChecked = Model.concludingConversationData.ThinkAboutComming.Equals(thinkAboutComming);
                    var randomInputId = RandomStringHelper.GenerateRandomUniqueString(3);
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="@randomInputId" @(isChecked ? "checked" : "") value="@thinkAboutComming.ToString()">
                        <label class="form-check-label" for="@randomInputId">@thinkAboutComming.ToString().ToProperCase()</label>
                    </div>
                }
            </div>
        </div>

        <div class="py-2">
            <span class="form-label">Why?</span>
            <div class="border border-black rounded-1 mt-2">
                <p class="m-3">
                    @(!string.IsNullOrEmpty(Model.concludingConversationData.Paragraph) ? Model.concludingConversationData.Paragraph : string.Empty)
                </p>
            </div>
        </div>

        <div class="py-2">
            <span class="form-label">2. If you were to come here, what days and times would be best for you?</span>
            <div class="border border-black rounded-1 mt-2">
                <p class="m-3">
                    @(!string.IsNullOrEmpty(Model.concludingConversationData.Paragraph) ? Model.concludingConversationData.Paragraph : string.Empty)
                </p>
            </div>
        </div>

        <div class="py-2">
            <span class="form-label">3. What days and times are not good for you? Why?</span>
            <div class="border border-black rounded-1 mt-2">
                <p class="m-3">
                    @(!string.IsNullOrEmpty(Model.concludingConversationData.Paragraph) ? Model.concludingConversationData.Paragraph : string.Empty)
                </p>
            </div>
        </div>

        <div class="py-2">
            <span class="form-label">4. Do you know anyone who comes here now or came in the past?</span>
            <div class="border border-black rounded-1 mt-2">
                <p class="m-3">
                    @(!string.IsNullOrEmpty(Model.concludingConversationData.Paragraph) ? Model.concludingConversationData.Paragraph : string.Empty)
                </p>
            </div>
        </div>
    </div>
</div>

<div class="pagebreak"> </div>

<div class="print-row py-2  mt-4 ash_box border border-2">
    <div class="ms-3 col-11">
        <div class="d-flex flex-row">
            <div><p class="fs-5 fw-bold form-label">Concluding Conversation With Student and Parents</p></div>
            <div class="green_line"></div>
        </div>

        <div>
            <ul class="normal_font">
                <li><i>You’ve really been winderful!!</i></li>
                <li><i>I’ve enjoyed our conversation and really appreciate how you answered my questions.</i></li>
                <li><i>I’ve taken good notes and I’m sure we’ll be able ti help you do better in school</i></li>
                <li>Thank the student for his or her hard work.</li>
                <li>
                    Praise the student’s performance to the parent:
                    <ul>
                        <li style="list-style-type:none"><i>"He worked hard. He really got through so much, and we look forward to seeing you to discuss the results."</i></li>
                    </ul>
                </li>
                <li>Do not say <i>"He did well"</i>, or similar statements indicating there is no problem, since that’s for the testing to determine.</li>
                <li>Confirm the date and time of the conference with the parent.</li>
                <li>
                    Remind the parent that
                    <ul style="list-style-type:disc">
                        <li>We expect both parents to attend.</li>
                        <li>The student is not to attend.</li>
                    </ul>
                </li>
                <li>Say goodbye</li>

            </ul>
        </div>

    </div>
</div>
