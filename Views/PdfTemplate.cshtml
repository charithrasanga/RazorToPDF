@model GeneratePdfRequest

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@await Html.PartialAsync("~/Views/Shared/_ReportHeaderPartial.cshtml", "STUDENT LC TEST ADMINISTRATION")
@await Html.PartialAsync("~/Views/Shared/_PageHeaderBar.cshtml", new RazorToPDF.Views.Shared._PageHeaderBarModel { Title = "Initial Intake Information", Number = "1" })

        <div class="container">
            <h2>Student Details Section 2</h2>
            <form>
                <div class="form-group">
                    <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" name="name" value="@(Model.FillData ? "Charith Wickramasinghe 🔥😍🙌🤞" : "")" />

                </div>
                <div class="form-group">
                    <label for="age">Age:</label>
                    <input type="text" class="form-control" id="age" name="age" value="@(Model.FillData ? "25" : "")" />
                </div>
                <div class="form-group">
                    <label for="gender">Gender:</label>
                    <select class="form-control" id="gender" name="gender">
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                    </select>
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="agree" name="agree" />
                    <label class="form-check-label" for="agree">I agree to the terms and conditions</label>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
  
@await Html.PartialAsync("~/Views/Shared/_PageBreakPartial.cshtml")
@await Html.PartialAsync("~/Views/Shared/_PageHeaderBar.cshtml", new RazorToPDF.Views.Shared._PageHeaderBarModel { Title = "Some other stuff", Number = "2" })


    @if (Model.ShowInstructions)
    {
        <div class="container">
            <h2>Instructions Section</h2>
            <p>This is the instructions section of the PDF.</p>
        </div>
    }

    @if (Model.ShowTerms)
    {
        <div class="container">
            <h2>Terms Section</h2>
            <p>This is the terms section of the PDF.</p>
        </div>
    }

